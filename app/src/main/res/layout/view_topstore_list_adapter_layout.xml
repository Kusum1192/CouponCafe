<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/cardview_top_store"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="2dp"
    app:cardUseCompatPadding="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:padding="12dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image_view_topstore"
                android:layout_gravity="center"
                android:scaleType="centerInside"
                android:src="@drawable/time_prime_logo"
                android:layout_weight=".4"
                android:layout_width="0dp"
                android:layout_height="40dp"/>



            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1.6"
                android:layout_width="0dp"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView
                        android:id="@+id/tv_topstore_name"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:text="Fresh to Home"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/tv_offer_count"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="4 Offers"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>


                </LinearLayout>

                <TextView
                    android:text="category"
                    android:id="@+id/tv_topstore_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tv_cashback"
                    android:text="@string/uptocashback"
                    android:textSize="14sp"
                    android:textColor="@color/green"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


            </LinearLayout>





        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>