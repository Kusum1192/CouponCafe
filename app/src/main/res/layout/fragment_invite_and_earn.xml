<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:background="#f6f6f8">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:clickable="true">


            <ImageView
                android:id="@+id/invite_share_people_img"
                android:layout_width="match_parent"
                android:layout_height="150sp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:src="@drawable/refer" />

            <LinearLayout
                android:id="@+id/refer_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"

                android:layout_below="@+id/invite_share_people_img">

                <TextView
                    android:id="@+id/img_refferal"
                    android:layout_marginLeft="20sp"
                    android:layout_marginRight="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:textSize="@dimen/_15sdp"
                    android:text="@string/text_refer" />


            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/view_Details"
                android:layout_below="@+id/refer_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="View Details"
                    android:textColor="@color/colorPrimary"
                    android:gravity="center"
                    android:textSize="@dimen/_16sdp"
                    android:layout_marginTop="10sp">

                </TextView>

            </LinearLayout>

            <View
                android:id="@+id/view_stub"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/view_Details"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@color/black"/>

            <LinearLayout
                android:id="@+id/layout_share"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view_stub"
                android:padding="6sp"
                android:background="@android:color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:singleLine="true"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_16sdp"
                    android:layout_gravity="center"
                    android:text="@string/share_earn" />

                <LinearLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_marginTop="8sp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/refer_code"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:background="@drawable/dash_border_refferal"
                        android:gravity="center"
                        android:paddingLeft="@dimen/_8sdp"
                        android:paddingRight="@dimen/_8sdp"
                        android:text="RECFRNF060000000000000"
                        android:textSize="@dimen/_14sdp"
                        android:textColor="@color/colorPrimaryDark" />

                    <ImageView
                        android:id="@+id/tv_code_copy"
                        android:background="@color/line_gray"
                        android:layout_width="@dimen/_30sdp"
                        android:src="@drawable/copy"
                        android:layout_height="@dimen/_30sdp">

                    </ImageView>

                </LinearLayout>

                <Button
                    android:id="@+id/share_now_button"
                    android:layout_gravity="center"
                    android:layout_marginTop="12sp"
                    android:layout_width="130sp"
                    android:text="SHARE NOW"
                    android:textColor="@color/white"
                    android:background="@color/colorPrimary"
                    android:layout_height="40sp">

                </Button>

            </LinearLayout>

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/layout_share"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@color/black"/>

            <LinearLayout
                android:visibility="gone"
                android:layout_marginTop="6sp"
                android:layout_below="@+id/view2"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:src="@drawable/giftbox">
                    </ImageView>
                    <TextView
                        android:textSize="@dimen/_14sdp"
                        android:layout_width="90sp"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:layout_height="@dimen/_30sdp"
                        android:text="INVITATIONS">

                    </TextView>


                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:layout_marginBottom="6sp"
                    android:text="You've not got any confirmed bonus yet.">

                </TextView>



            </LinearLayout>



        </RelativeLayout>
    </ScrollView>

</RelativeLayout>