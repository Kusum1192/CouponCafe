<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:scrollbars="none">

        <LinearLayout
            android:layout_marginBottom="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:clickable="true"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/invite_share_people_img"
                android:layout_width="match_parent"
                android:layout_height="150sp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:src="@drawable/refer" />

            <LinearLayout
                android:id="@+id/refer_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/invite_share_people_img"

                android:gravity="center">

                <TextView
                    android:id="@+id/img_refferal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:layout_marginRight="20sp"
                    android:gravity="center"
                    android:text="@string/text_refer"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15sdp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/view_Details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:gravity="center"
                    android:text="View Details"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_16sdp">

                </TextView>

            </LinearLayout>

            <View
                android:id="@+id/view_stub"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@color/line_gray" />

            <LinearLayout
                android:id="@+id/layout_share"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view_stub"
                android:background="@android:color/white"
                android:orientation="vertical"
                android:padding="6sp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:singleLine="true"
                    android:text="@string/share_earn"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_16sdp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8sp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/refer_code"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:background="@drawable/dash_border_refferal"
                        android:gravity="center"
                        android:paddingLeft="@dimen/_8sdp"
                        android:paddingRight="@dimen/_8sdp"
                        android:text="RECFRNF060000000000000"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/_14sdp" />

                    <ImageView
                        android:id="@+id/tv_code_copy"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:background="@color/line_gray"
                        android:src="@drawable/copy">

                    </ImageView>

                </LinearLayout>

                <Button
                    android:id="@+id/share_now_button"
                    android:layout_width="130sp"
                    android:layout_height="40sp"
                    android:layout_gravity="center"
                    android:layout_marginTop="12sp"
                    android:background="@color/colorPrimary"
                    android:text="SHARE NOW"
                    android:textColor="@color/white">

                </Button>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_share1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="6sp"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:singleLine="true"
                    android:text="@string/share_earn"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_16sdp" />

                <LinearLayout
                    android:layout_margin="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">



                    <LinearLayout
                        android:gravity="center"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:scaleType="fitXY"
                            android:src="@drawable/whatsapp"
                            android:layout_width="50dp"
                            android:layout_height="50dp"/>

                        <TextView
                            android:textColor="@color/black"
                            android:text="Whatsapp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <LinearLayout
                        android:gravity="center"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:scaleType="fitXY"
                            android:src="@drawable/telegram"
                            android:layout_width="50dp"
                            android:layout_height="50dp"/>

                        <TextView
                            android:textColor="@color/black"
                            android:text="Telegram"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>


                    <LinearLayout
                        android:gravity="center"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:backgroundTint="@color/red"
                            android:src="@drawable/network"
                            android:layout_width="50dp"
                            android:layout_height="50dp"/>

                        <TextView
                            android:textColor="@color/black"
                            android:text="Other"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>


                </LinearLayout>


                <Button
                    android:visibility="gone"
                    android:id="@+id/share_now_button1"
                    android:layout_width="130sp"
                    android:layout_height="40sp"
                    android:layout_gravity="center"
                    android:layout_marginTop="12sp"
                    android:background="@color/colorPrimary"
                    android:text="SHARE NOW"
                    android:textColor="@color/white">

                </Button>

            </LinearLayout>

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@color/line_gray" />



                <LinearLayout
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:src="@drawable/giftbox"/>

                        <TextView
                            android:layout_width="90sp"
                            android:layout_height="@dimen/_30sdp"
                            android:gravity="center"
                            android:text="INVITATIONS"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14sdp">

                        </TextView>


                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6sp"
                        android:gravity="center"
                        android:text="You've not got any confirmed bonus yet."
                        android:textColor="@color/black"
                        android:textSize="13sp">

                    </TextView>


                </LinearLayout>






        </LinearLayout>
    </ScrollView>

</RelativeLayout>