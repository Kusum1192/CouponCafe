<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context=".activities.PaymentScreenActivity">



    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:padding="5dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/paytm_icon"
                android:layout_width="match_parent"
                android:layout_height="100dp"/>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="5dp"
                android:background="@color/white"
                card_view:cardCornerRadius="2dp"
                card_view:cardElevation="2dp"
                card_view:cardMaxElevation="2dp"
                card_view:contentPadding="4dp">

                <EditText
                    android:maxLength="13"
                    android:singleLine="true"
                    android:inputType="number"
                    android:padding="10dp"
                    android:background="@color/white"
                    android:id="@+id/et_paytm_mobile"
                    android:hint="Enter Paytm Mobile Number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="5dp"
                android:background="@color/white"
                card_view:cardCornerRadius="2dp"
                card_view:cardElevation="2dp"
                card_view:cardMaxElevation="2dp"
                card_view:contentPadding="4dp">

            <EditText
                android:inputType="textEmailAddress"
                android:padding="10dp"
                android:background="@color/white"
                android:id="@+id/et_email"
                android:hint="Enter Valid Email Address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="5dp"
                android:background="@color/white"
                card_view:cardCornerRadius="2dp"
                card_view:cardElevation="2dp"
                card_view:cardMaxElevation="2dp"
                card_view:contentPadding="4dp">

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/spiner_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_margin="10dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:background="@color/red"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:padding="10dp"
                android:text="Withdraw Now"
                android:id="@+id/tv_submit"
                android:layout_width="200dp"
                android:layout_height="wrap_content"/>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:text="@string/rule"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <WebView
                android:id="@+id/WebView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="WebViewLayout" />



        </LinearLayout>
    </ScrollView>

</LinearLayout>